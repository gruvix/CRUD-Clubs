<div style="height: 410px; overflow: auto;">
<table class="table" id="players-table">
    <thead>
        <tr class="table-dark">
            <td class="text-warning">Id</td>
            <td class="text-warning">Name</td>
            <td class="text-warning">Position</td>
            <td class="text-warning">Nationality</td>
            <td></td>
        </tr>
        {{#each players}}
           <tr class="table-dark table-bordered">
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
            {{#if this.position}}
                <td>{{this.position}}</td>
            {{else}}
                <td>{{this.role}}</td>
            {{/if}}
                <td>{{this.nationality}}</td>
                <td>
                    <button class="btn btn-outline-warning">
                        edit
                    </button>
                </td>
            </tr>
        {{/each}}
    </thead>
</table>
</div>