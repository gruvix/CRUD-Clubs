<div class="container">
    <div class="row row-cols-5 justify-content-center">
    {{#each items}}
    <div class="card card-container">
        <div class="card-header">
            <h5 class="card-title team-card-title">{{this.name}}</h5>

        </div>
        <img src="{{this.crestUrl}}" class="list-team-crest-image" alt="team crest">
        <div class="card-body" style="align-self: center">
            <button class="btn btn-outline-warning overlay-button" href="user/{{../username}}/teams/{{this.id}}">edit</button>
            <button class="btn btn-outline-light overlay-button" style="color: darkgrey; border-color: darkgrey">reset</button>
            <button class="btn btn-outline-danger overlay-button">delete</button>
        </div>
    </div>
    {{/each}}
    </div>
</div>