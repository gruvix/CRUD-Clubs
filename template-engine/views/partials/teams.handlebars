<div class="container">
    <div class="row row-cols-5 justify-content-center">
    {{#each items}}
    <div class="card card-container">
        <div class="card-header">
            <h5 class="card-title team-card-title">{{this.name}}</h5>
        </div>
        <img src="{{this.crestUrl}}" class="list-team-crest-image" alt="team crest">
        <div class="card-body" style="align-self: center" id="{{this.id}}">
            <button class="btn btn-outline-warning overlay-button edit">edit</button>
            <button class="btn btn-outline-light overlay-button reset" style="color: darkgrey; border-color: darkgrey">reset</button>
            <button class="btn btn-outline-danger overlay-button delete">delete</button>
        </div>
    </div>
    {{/each}}
    </div>
</div>