<div class="container">
    <div class="row">
        <div class="col-2">
            <button type="button" class="btn btn-shadow btn-outline-warning" style="margin-top: 25px;" id="back-to-teams-button">
                Go back
            </button>
        </div>

        <div class="col-8">
            <div class="d-flex justify-content-center">
                <img src="{{data.crest}}" alt="Team crest" class="team-crest-image">
            </div>
        </div>

        <div class="col">
            style="margin-top: 25px;" 
            <button type="button" class="btn btn-shadow btn-outline-danger" 
            id="reset-team-button" data-toggle="tooltip" data-placement="bottom" title="Reset the team to its default values">
                Reset to default
            </button>

        </div>
    </div>

    <div class="row">
        <div class="col">
            <strong class="d-flex justify-content-center text-warning table-title">
                Team
            </strong>
            <div class="d-flex justify-content-center">
                {{> teamTable team=data.team }}
            </div>
        </div>
        <div class="col">
            <strong class="d-flex justify-content-center text-warning table-title">
                Players
            </strong>
            <div class="d-flex justify-content-center">
                {{> playersTable players=data.players }}
            </div>
        </div>
    </div>
    <input type="hidden" id="team-id" value="{{data.id}}">
</div>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Are you sure?</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        You are about to <span id="action on modal"></span>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>



<script type="module" src="scripts/teamEditor.js"></script>