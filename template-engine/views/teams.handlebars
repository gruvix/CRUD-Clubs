<div class="container">
    <div class="row">
        <div class="col-2">
            <button type="button" class="btn btn-outline-warning" style="margin-top: 15px;" id="log-out-button">log out</button>
        </div>
        <div class="col-8">
            <h1 class="text-center" style="margin-top: 20px; color: rgb(255, 187, 0);">Welcome {{data.capitalizedName}}</h1>
        </div>
    </div>

    <div class="row">
        <div class="col text-center">
            <button type="button" id="add-new-team-button" class="btn btn-warning">
                Add new team
            </button>
        </div>
        <div class="col text-center">
            <button type="button" id="reset-teams-button" class="btn btn-danger">
                Reset Teams
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                {{> teams username=data.username items=data.teams }}
            </table>
        </div>
    </div>

</div>
<script src="scripts/teams.js"></script>