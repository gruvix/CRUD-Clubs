<div class="container">
    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-outline-warning" style="margin-top: 25px;" id="back-to-teams-button">
                Go back
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="d-flex justify-content-center">
                <img src="{{data.crest}}" alt="Team crest" style="padding-bottom: 15px;">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <strong class="d-flex justify-content-center text-warning table-title">
                Team
            </strong>
        </div>
        <div class="col">
            <strong class="d-flex justify-content-center text-warning table-title">
                Players
            </strong>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="d-flex justify-content-center">
                {{> teamTable team=data.team }}
            </div>
        </div>
        <div class="col">
            <div class="d-flex justify-content-center">
                {{> playersTable players=data.players }}
            </div>
        </div>
    </div>
</div>
<script type="module" src="scripts/team.js"></script>